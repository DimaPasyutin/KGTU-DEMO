<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_timetable">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.kgtu.ui.news.NewsFragment"
        android:label="@string/menu_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/nav_timetable"
        android:name="com.example.kgtu.ui.timetable.TimetableFragment"
        android:label="@string/menu_table_time"
        tools:layout="@layout/fragment_timetable" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.kgtu.ui.navigator.NavigatorFragment"
        android:label="@string/menu_navigator"
        tools:layout="@layout/fragment_navigation" />

    <fragment
        android:id="@+id/nav_schedule"
        android:name="com.example.kgtu.ui.schedule.ScheduleFragment"
        android:label="@string/menu_deanary"
        tools:layout="@layout/fragment_schedules" >
        <action
            android:id="@+id/action_nav_schedule_to_nav_schedule_info"
            app:destination="@id/nav_schedule_info" />
    </fragment>

    <fragment
        android:id="@+id/nav_schedule_info"
        android:name="com.example.kgtu.ui.schedule.ScheduleInfoFragment"
        android:label="@string/menu_deanary"
        tools:layout="@layout/fragment_schedule_info" />
</navigation>